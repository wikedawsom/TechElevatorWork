@model LoginViewModel

@section StyleSheet {
    <link href="~/css/Login.css" rel="stylesheet" />
}

@section Title {
    Login
}

<div class="row loginHeader">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <form asp-controller="User" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" placeholder="User Name" class="form-control" />
                <span asp-validation-for="Username" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="registerAccount">
                <a asp-controller="User" asp-action="Register">Create new account</a>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <div>
                @Html.ValidationMessage("invalid-user", new { @class = "error" })
            </div>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>
